<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SubChlFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subChl_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="15dp">

            <ImageButton
                android:id="@+id/btnOpenSubChlSheet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/custom_one_shape_button"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_iconfinder_ic_playlist_add"
                android:tint="@color/White" />

            <ImageButton
                android:id="@+id/btnRefreshRecyclerView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/point_active_background"
                android:contentDescription="@string/todo"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_round_refresh_24"
                android:tint="@color/White" />

        </LinearLayout>

        <ImageView
            android:id="@+id/emptyImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:contentDescription="@string/todo"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_happy_music"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/subChl_RecyclerView"
            app:layout_constraintTop_toTopOf="@+id/subChl_RecyclerView"
            tools:layout_editor_absoluteX="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>