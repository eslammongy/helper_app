<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Animation.Design.BottomSheetDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    android:background="@drawable/bottom_sheet_shape"
    app:behavior_peekHeight="30dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <EditText
        android:id="@+id/enter_Chl_Title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:autofillHints="@string/title"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/ColorDefaultNote"
        android:textColor="@color/Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_dark_shape"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintBottom_toTopOf="@+id/calendar_view"
        app:layout_constraintEnd_toStartOf="@+id/save_chl_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chl_paletteColor">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_ShowChlTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:hint="@string/time"
            android:inputType="time"
            android:maxLines="1"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_round_timer_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:textColor="@color/White"
            android:textColorHint="@color/ColorDefaultNote"
            android:textSize="17sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:alpha="0.7"
            android:background="@color/ColorOrangeNote" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_ShowChlDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/date"
            android:inputType="date"
            android:maxLines="1"
            android:padding="6dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_round_calendar_today_24"
            android:drawableTint="@color/White"
            android:textColor="@color/White"
            android:textColorHint="@color/ColorDefaultNote"
            android:textSize="17sp" />

    </LinearLayout>

    <com.thebluealliance.spectrum.SpectrumPalette
        android:id="@+id/chl_paletteColor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_Chl_Title"
        app:spectrum_colors="@array/demo_color" />

    <ImageButton
        android:id="@+id/save_chl_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_round_send_24"
        android:tint="@color/white"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chl_paletteColor" />

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_chl_button" />

</androidx.constraintlayout.widget.ConstraintLayout>